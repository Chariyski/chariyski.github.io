{
  "name": "krasimir-chariyski-portfolio",
  "version": "1.0.0",
  "description": "",
  "author": "Krasimir Chariyski",
  "scripts": {
    "copy": "npm-run-all copy:*",
    "copy:root": "copyup app/*.* build",
    "copy:htaccess": "copyup app/.* build",
    "copy:vendor": "copyup app/vendor/**/*.* build",
    "copy:html": "copyup app/**/*.html build",
    "copy:md": "copyup app/markdown/**/*.md build",
    "lint": "eslint app/scripts/**/*.js",
    "browserify": "browserify app/scripts/main.js -o build/scripts/bundle.js  -d -t [ babelify ]",
    "prebuild": "rimraf build && mkdirp build/scripts && mkdirp build/styles",
    "build": "npm-run-all copy:* build:*",
    "build:styles": "pleeease-compile",
    "build:scripts": "npm-run-all lint browserify",
    "build:images": "node tools/optimize-images.cli.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:styles": "watch \"npm run build:styles\" app/styles",
    "watch:scripts": "watch \"npm run build:scripts\" app/scripts",
    "watch:html": "watch \"npm run copy:html\" app",
    "preserve": "opener http://localhost:8080",
    "serve": "http-server -p 8080 build/",
    "predev": "npm run build",
    "dev": "npm-run-all --parallel serve watch",
    "minify": "npm run minify:*",
    "minify:html": "html-minifier --collapse-whitespace ./app/index.html -o ./build/index.html",
    "minify:browserify": "browserify app/scripts/main.js -o build/scripts/bundle.js  -d -t [ babelify ] -p [minifyify --map build/scripts/bundle.map.json --output build/scripts/bundle.map.json]",
    "prod": "npm run build && npm-run-all minify:* && node tools/build.production.config.js",
    "audit": "npm-run-all audit:*",
    "audit:css": "parker build/styles/main.css"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^4.1.8",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "copyfiles": "^0.2.2",
    "critical": "^0.7.3",
    "eslint": "^1.10.3",
    "eslint-config-chariyski": "^0.1.5",
    "html-minifier": "^2.1.7",
    "http-server": "^0.9.0",
    "imagemin": "^5.2.2",
    "imagemin-cli": "^2.1.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "markdown": "^0.5.0",
    "minifyify": "^7.3.3",
    "mkdirp": "^0.5.1",
    "node-version-assets": "^1.2.0",
    "npm-run-all": "^1.8.0",
    "parallelshell": "^2.0.0",
    "parker": "0.0.10",
    "pleeease-cli": "^4.0.0",
    "rimraf": "^2.5.4",
    "watch": "^0.19.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "gumshoe": "github:cferdinandi/gumshoe",
    "smooth-scroll": "github:cferdinandi/smooth-scroll"
  }
}

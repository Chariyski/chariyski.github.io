{
  "name": "krasimir-chariyski-portfolio",
  "version": "1.0.0",
  "description": "",
  "author": "Krasimir Chariyski",
  "scripts": {
    "copy": "npm run copy:root",
    "copy:root": "copyup app/*.* build",
    "copy:html": "copyup app/**/*.html build",
    "lint": "eslint app/scripts/**/*.js",
    "browserify": "browserify app/scripts/main.js -o build/scripts/bundle.js  -d -t [ babelify ] -p [minifyify --map build/scripts/bundle.map.json --output build/scripts/bundle.map.json]",
    "prebuild": "rimraf build && mkdirp build/scripts && mkdirp build/styles",
    "build": "npm-run-all copy:root build:*",
    "build:styles": "pleeease-compile",
    "build:scripts": "npm-run-all lint browserify",
    "build:images": "imagemin app/images/**/* build/images",
    "watch": "npm-run-all --parallel watch:*",
    "watch:styles": "nodemon --watch app -e less --exec \"npm run build:styles\"",
    "watch:scripts": "nodemon --watch app/scripts -e js --exec \"npm run build:scripts\"",
    "watch:html": "nodemon --watch app/ -e html --exec \"npm run copy:html\"",
    "preserve": "opener http://localhost:8080",
    "serve": "http-server -p 8080 build/",
    "predev": "npm run build",
    "dev": "npm-run-all --parallel serve watch"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.8",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "copyfiles": "^0.2.1",
    "eslint": "^1.10.3",
    "eslint-config-chariyski": "^0.1.5",
    "http-server": "^0.9.0",
    "imagemin-cli": "^2.1.0",
    "minifyify": "^7.3.2",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.5.3",
    "parallelshell": "^2.0.0",
    "pleeease-cli": "^4.0.0",
    "rimraf": "^2.5.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "gumshoe": "github:cferdinandi/gumshoe",
    "smooth-scroll": "github:cferdinandi/smooth-scroll"
  }
}
